<COMPONENT>
    <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.1" STATUS="ALPHA"

        COMPATIBILITY="ALL" AUTHOR="mcoudert,fxprunayre" RELEASE_DATE="20120827"
        STARTABLE="true">
        <SIGNATURE />
    </HEADER>

    <FAMILIES>
        <FAMILY>Geo/File/Input</FAMILY>
    </FAMILIES>

    <DOCUMENTATION>
        <URL />
    </DOCUMENTATION>

    <CONNECTORS>
        <CONNECTOR CTYPE="FLOW" MAX_INPUT="0" />
        <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
        <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
        <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
        <CONNECTOR CTYPE="COMPONENT_OK" />
        <CONNECTOR CTYPE="COMPONENT_ERROR" />
        <CONNECTOR CTYPE="RUN_IF" />
    </CONNECTORS>

    <PARAMETERS>

        <PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="10"
            REQUIRED="true" REPOSITORY_VALUE="FILE_PATH">
            <DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.SHP"</DEFAULT>
        </PARAMETER>

        <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
            NUM_ROW="20">
            <TABLE READONLY="true">
                <COLUMN NAME="driver" TYPE="id_String" LENGTH="50" />
                <COLUMN NAME="files" TYPE="id_String" LENGTH="255" />
                <COLUMN NAME="fid_column" TYPE="id_String" LENGTH="255" />
                <COLUMN NAME="geom_column" TYPE="id_String" LENGTH="255" />
                <!-- TODO : better to create a list -->
                <COLUMN NAME="columns_def" TYPE="id_String" LENGTH="20000" />
                <COLUMN NAME="geom_type" TYPE="id_String" LENGTH="255" />
                <COLUMN NAME="srs" TYPE="id_String" LENGTH="255" />
                <COLUMN NAME="epsg_code" TYPE="id_Integer" LENGTH="6" />
                <COLUMN NAME="geo_extent" TYPE="id_Geometry" />
                <COLUMN NAME="latlon_extent" TYPE="id_Geometry" />
                <COLUMN NAME="nb_features" TYPE="id_Integer" LENGTH="2" />
                <COLUMN NAME="error" TYPE="id_String" LENGTH="255" />
            </TABLE>
        </PARAMETER>

    </PARAMETERS>

    <ADVANCED_PARAMETERS>
        <PARAMETER NAME="FIELD_SEPARATOR" FIELD="TEXT" NUM_ROW="10"
            REQUIRED="true" REPOSITORY_VALUE="FIELD_SEPARATOR">
            <DEFAULT>"|"</DEFAULT>
        </PARAMETER>

        <PARAMETER NAME="IMPORT" FIELD="MEMO_IMPORT" REQUIRED="false"
            SHOW="false" NUM_ROW="20">
            <DEFAULT>import org.talend.sdi.geometry.Geometry;</DEFAULT>
        </PARAMETER>

    </ADVANCED_PARAMETERS>

    <CODEGENERATION>
        <IMPORTS>
            <IMPORT NAME="org.talend.sdi" MODULE="org.talend.sdi.jar"
                REQUIRED="true" />
            <IMPORT NAME="gdal" MODULE="gdal.jar" REQUIRED="true" />
            <IMPORT NAME="gt-opengis" MODULE="gt-opengis-8.5.jar" REQUIRED="true" />
            <IMPORT NAME="jsr-275" MODULE="jsr-275-1.0-beta-2.jar" REQUIRED="true" />
            <IMPORT NAME="gt-api" MODULE="gt-api-8.5.jar" REQUIRED="true" />
            <IMPORT NAME="gt-metadata" MODULE="gt-metadata-8.5.jar" REQUIRED="true" />
            <IMPORT NAME="gt-epsg-hsql" MODULE="gt-epsg-hsql-8.5.jar" REQUIRED="true" />
            <IMPORT NAME="hsqldb" MODULE="hsqldb-1.8.0.7.jar" REQUIRED="true" />
            <IMPORT NAME="gt-referencing" MODULE="gt-referencing-8.5.jar" REQUIRED="true" />
            <IMPORT NAME="jai-core" MODULE="jai_core-1.1.3.jar" REQUIRED="true" />
            <IMPORT NAME="vecmath" MODULE="vecmath-1.3.2.jar" REQUIRED="true" />
            <IMPORT NAME="jts" MODULE="jts-1.12.jar" REQUIRED="true" />
        </IMPORTS>
    </CODEGENERATION>

    <RETURNS>
        <RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
    </RETURNS>
</COMPONENT>