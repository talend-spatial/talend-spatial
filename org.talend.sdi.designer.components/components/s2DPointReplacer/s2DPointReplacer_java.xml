  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
      NUM_ROW="1">
      <TABLE READONLY="true">
        <COLUMN NAME="the_geom" TYPE="id_Geometry" READONLY="false"
          CUSTOM="true" />
      </TABLE>
    </PARAMETER>
    <PARAMETER NAME="X" FIELD="PREV_COLUMN_LIST" REQUIRED="true"
      NUM_ROW="2" />
    <PARAMETER NAME="Y" FIELD="PREV_COLUMN_LIST" REQUIRED="true"
      NUM_ROW="3" />
  </PARAMETERS>
  <ADVANCED_PARAMETERS>
	<PARAMETER NAME="IMPORT" FIELD="MEMO_IMPORT" REQUIRED="false" SHOW="false" NUM_ROW="1">
	  <DEFAULT>import org.talend.sdi.geometry.Geometry;</DEFAULT>
	</PARAMETER>   
  </ADVANCED_PARAMETERS>
  <CODEGENERATION>
    <IMPORTS>
      <IMPORT NAME="jts" MODULE="jts-1.12.jar" REQUIRED="true" />
      <IMPORT NAME="org.talend.sdi" MODULE="org.talend.sdi.jar"
        REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>
  <RETURNS>
    <RETURN NAME="NB_FEATURE" TYPE="INTEGER" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>
