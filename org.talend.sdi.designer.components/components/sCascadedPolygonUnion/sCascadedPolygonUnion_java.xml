<!--
  
  Comments : 
    This component uses the CascadedPolygonUnion algorithm from JTS library
    (faster with big set of features)
  
-->
<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.1" STATUS="ALPHA"
    COMPATIBILITY="ALL" AUTHOR="Neogeo Technologies" RELEASE_DATE="20110201"
    STARTABLE="false" DATA_AUTO_PROPAGATE="false"
    SCHEMA_AUTO_PROPAGATE="true">
    <SIGNATURE />
  </HEADER>
  <FAMILIES>
    <FAMILY>Geo/Geometric Operators</FAMILY>
  </FAMILIES>
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="1">
      <DEFAULT />
    </PARAMETER>

    <PARAMETER NAME="DISSOLVE_ALL" FIELD="RADIO" REQUIRED="true" NUM_ROW="2" GROUP="DISSOLVE">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="DISSOLVE_FIELD" FIELD="RADIO" REQUIRED="true" NUM_ROW="3" GROUP="DISSOLVE">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="COL" FIELD="PREV_COLUMN_LIST" NUM_ROW="4" SHOW_IF="DISSOLVE_FIELD == 'true'" GROUP="DISSOLVE"/>

    <PARAMETER NAME="OPERATION" FIELD="TEXT" SHOW="false" NUM_ROW="5" REQUIRED="true">
      <DEFAULT>cascadedPolygonUnion</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="DESTINATION" FIELD="TEXT" NUM_ROW="6" SHOW="false" REQUIRED="true">
      <DEFAULT>sCascadedPolygonUnion_1</DEFAULT>
    </PARAMETER>
    
  </PARAMETERS>
  <ADVANCED_PARAMETERS>
	<PARAMETER NAME="IMPORT" FIELD="MEMO_IMPORT" REQUIRED="false" SHOW="false" NUM_ROW="1">
	  <DEFAULT>import org.talend.sdi.geometry.Geometry;</DEFAULT>
	</PARAMETER>   
  </ADVANCED_PARAMETERS>
  <CODEGENERATION>
    <TEMPLATES INPUT="AGG" OUTPUT="DI">
      <TEMPLATE NAME="AGG" COMPONENT="sAggGeomOut">
        <LINK_TO NAME="DI" CTYPE="ROWS_END" />
      </TEMPLATE>
      <TEMPLATE NAME="DI" COMPONENT="tArrayIn" />
      <TEMPLATE_PARAM SOURCE="self.COL" TARGET="AGG.COL" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="AGG.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.OPERATION" TARGET="AGG.OPERATION" />
      <TEMPLATE_PARAM SOURCE="self.DISSOLVE_ALL" TARGET="AGG.NO_COL_SELECTED" />
      <TEMPLATE_PARAM SOURCE="self.DESTINATION" TARGET="AGG.DESTINATION" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="DI.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.UNIQUE_NAME" TARGET="DI.ORIGIN" />
    </TEMPLATES>
    <IMPORTS>
      <IMPORT NAME="jts" MODULE="jts-1.12.jar" REQUIRED="true" />
    </IMPORTS>
  </CODEGENERATION>
  <RETURNS />
</COMPONENT>
