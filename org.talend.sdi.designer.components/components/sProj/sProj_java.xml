<COMPONENT>
  <HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.101" STATUS="ALPHA"
    COMPATIBILITY="ALL" AUTHOR="Camptocamp" RELEASE_DATE="20071207"
    STARTABLE="false" SCHEMA_AUTO_PROPAGATE="true"
    DATA_AUTO_PROPAGATE="false">
    <SIGNATURE></SIGNATURE>
  </HEADER>
  <FAMILIES>
    <FAMILY>Geo/Geometric Operators</FAMILY>
  </FAMILIES>
  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>
  <CONNECTORS>
    <CONNECTOR CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" />
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0" />
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>
  <PARAMETERS>
    <PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true"
      NUM_ROW="1" SHOW="true">
    </PARAMETER>
    <PARAMETER NAME="SOURCE_CRS" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="2">
      <DEFAULT>"EPSG:4326"</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="TARGET_CRS" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="3">
      <DEFAULT>"EPSG:27572"</DEFAULT>
      <!-- TODO check hsqldb and add at least support for "EPSG:900913" -->
    </PARAMETER>
    <PARAMETER NAME="LENIENT" FIELD="CHECK" REQUIRED="true"
      NUM_ROW="4">
      <DEFAULT>false</DEFAULT>
    </PARAMETER>
    <PARAMETER NAME="OPERATION_TYPE" FIELD="TEXT" REQUIRED="true"
      NUM_ROW="3" SHOW="false">
      <DEFAULT>PROJ</DEFAULT>
    </PARAMETER>
  </PARAMETERS>
  <ADVANCED_PARAMETERS>
	<PARAMETER NAME="IMPORT" FIELD="MEMO_IMPORT" REQUIRED="false" SHOW="false" NUM_ROW="1">
	  <DEFAULT>import org.talend.sdi.geometry.Geometry;</DEFAULT>
	</PARAMETER>   
  </ADVANCED_PARAMETERS>
  <CODEGENERATION>
    <TEMPLATES INPUT="BO" OUTPUT="FF">
      <TEMPLATE NAME="BO" COMPONENT="sGeoBasicOperation">
        <LINK_TO NAME="FF" CTYPE="FLOW" />
      </TEMPLATE>
      <TEMPLATE NAME="FF" COMPONENT="sFlowForwarder" />
      <TEMPLATE_PARAM SOURCE="self.OPERATION_TYPE"
        TARGET="BO.OPERATION_TYPE" />
      <TEMPLATE_PARAM SOURCE="self.SOURCE_CRS" TARGET="BO.SOURCE_CRS" />
      <TEMPLATE_PARAM SOURCE="self.TARGET_CRS" TARGET="BO.TARGET_CRS" />
      <TEMPLATE_PARAM SOURCE="self.LENIENT" TARGET="BO.LENIENT" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="BO.SCHEMA" />
      <TEMPLATE_PARAM SOURCE="self.SCHEMA" TARGET="FF.SCHEMA" />
    </TEMPLATES>
  </CODEGENERATION>
  <RETURNS>
    <RETURN NAME="NB_FEATURE" TYPE="INTEGER" AVAILABILITY="AFTER" />
  </RETURNS>
</COMPONENT>
